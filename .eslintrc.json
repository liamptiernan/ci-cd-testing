{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 13
  },
  // Rule docs: http://eslint.org/docs/rules/
  "rules": {
    "block-scoped-var": [2],
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "camelcase": [2],
    "comma-spacing": [2],
    "comma-style": [2],
    "computed-property-spacing": [2, "never"],
    "consistent-return": [2],
    "consistent-this": [2, "self"],
    "curly": [2],
    "dot-notation": [0],
    "eol-last": [2],
    "eqeqeq": [2],
    "indent": [2, 2],
    "key-spacing": [2],
    "max-len": [2, 100],
    "max-nested-callbacks": [2, 3], // ????
    "new-cap": [2],
    "new-parens": [2],
    "no-caller": [2],
    "no-console": [0],
    "no-eval": [2],
    "no-extend-native": [2],
    "no-extra-bind": [2],
    "no-floating-decimal": [2],
    "no-iterator": [2],
    "no-lone-blocks": [2],
    "no-lonely-if": [2],
    "no-mixed-requires": [0],
    "no-mixed-spaces-and-tabs": [2],
    "no-multi-spaces": [2],
    "no-multi-str": [2],
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-native-reassign": [2],
    "no-new": [0],
    "no-redeclare": [2],
    "no-shadow": [2],
    "no-spaced-func": [2],
    "no-throw-literal": [2],
    "no-trailing-spaces": [2],
    "no-underscore-dangle": [0],
    "no-unneeded-ternary": [2],
    "no-use-before-define": [2, "nofunc"],
    "no-with": [2],
    "one-var": [2, "never"],
    "quotes": [2, "single", {"allowTemplateLiterals": true}],
    "radix": [2],
    "semi": [2, "always"],
    "semi-spacing": [2],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": [2],
    "space-unary-ops": [2],
    "strict": [0],
    "wrap-iife": [2]
  },
  "globals": {
    "module": true,
    "require": true
  }
}
